rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
  
    match /users/{userId} {
      // Any authenticated user can read another user's public profile.
      allow read: if request.auth != null;
      
      // A user can ONLY write to their own document.
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    match /rooms/{roomId} {
      allow create: if request.auth != null;
      allow list: if request.auth != null;
      
      allow get, delete: if request.auth != null && resource.data.members.hasAny([request.auth.uid]);
      
      allow update: if (request.auth != null && resource.data.members.hasAny([request.auth.uid])) ||
                     (
                       request.auth != null &&
                       !(request.auth.uid in resource.data.members) &&
                       request.resource.data.members == resource.data.members.concat([request.auth.uid]) &&
                       request.resource.data.name == resource.data.name &&
                       request.resource.data.code == resource.data.code
                     );

      match /{subcollection}/{docId} {
        allow read, write: if request.auth != null && get(/databases/$(database)/documents/rooms/$(roomId)).data.members.hasAny([request.auth.uid]);
      }
    }
  }
}